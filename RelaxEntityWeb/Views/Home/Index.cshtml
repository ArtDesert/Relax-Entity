	<body class="text-center">
		<div class="modal fade" id="regForm" data-backdrop="static" tabindex="-1" role="dialog" aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered" role="document">
				<div class="modal-content">
					<div class="tab-content modal-body">
						<form id="infoClient" asp-action="RegisterUser" method="post">
							<div class="form-group">
								<label>ФИО</label>
								<input type="text" value="Роман" placeholder="ФИО" asp-for="Name" class="form-control">
							</div>
							<div class="form-group">
								<label>Телефон</label>
							<input type="number" value="89629799727"  placeholder="Номер телефона" asp-for="Phone" class="form-control">
							</div>
							<div class="form-group">	
								<label>Email</label>
							<input type="text" value="1244@mail.ru" placeholder="Адрес электронной почты" asp-for="Email" class="form-control">
							</div>
							<div class="form-group">
							<label>Организация</label>
							<select id="org" class="form-control" asp-for="Organization">
								<option>Нет</option>
								@using(var context = new RelaxEntityContext())
								{
									foreach (var org in context.Organizations)
									{
										<option>@org.Name</option>
									}
								}
							</select>
							<div class="form-group">
								<label>Пароль</label>
								<input type="password" value="123456" asp-for="Password" class="form-control">
							</div>
							<div class="form-group">
								<label>Повторите пароль</label>
								<input type="password" value="123456" asp-for="PasswordConfirm" class="form-control">
							</div>
							<div class="modal-footer">
								<button class="btn btn-primary" type="submit" id="regClient">Зарегистрироваться</button>
								<button class="btn btn-secondary" type="button" data-dismiss="modal">Отмена</button>
							</div>
						</div>
						</form>

